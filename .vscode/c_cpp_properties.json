{
  "version": 4,
  "configurations": [
    {
      "name": "ESP-IDF",
      "compilerPath": "/opt/esp/tools/xtensa-esp32-elf/esp-2022r1-11.2.0/xtensa-esp32-elf/bin/xtensa-esp32-elf-gcc",
      "compileCommands": "${workspaceFolder}/build/compile_commands.json",
      "includePath": [
        "/opt/esp/idf/components/**",
        "${workspaceFolder}/**"
      ],

      "browse": {
        "path": [
          "/opt/esp/idf/components",
          "${workspaceFolder}"
        ],
        "limitSymbolsToIncludedHeaders": true
      },
      "cStandard": "c11",
      "cppStandard": "c++17",
      "intelliSenseMode": "gcc-x86"
    }
  ]
}
